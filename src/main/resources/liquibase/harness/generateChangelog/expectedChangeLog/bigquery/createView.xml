<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="1" author="as">
        <createTable tableName="view_table">
            <column name="view_column" type="INT"/>
        </createTable>
        <sql>INSERT INTO view_table VALUES (1)</sql>
        <rollback>
            <dropTable tableName="view_table"/>
        </rollback>
    </changeSet>
    <changeSet id="2" author="as">
        <createView viewName="test_view">
            select view_column from view_table
        </createView>
        <rollback>
            <dropView viewName="test_view"/>
        </rollback>
    </changeSet>
</databaseChangeLog>